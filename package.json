{
  "name": "book-wise",
  "version": "1.0.1",
  "description": "A modern cross-platform e-book reader",
  "main": "./out/main/index.js",
  "author": {
    "name": "app by Buzhifanji",
    "email": "buzhifanji@gmail.com"
  },
  "homepage": "./",
  "engines": {
    "node": ">=20.11.1",
    "npm": ">=10.8.0"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "pnpm run typecheck && electron-vite build && electron-builder",
    "build:web": "pnpm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:win": "pnpm run build && electron-builder --win",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:linux": "pnpm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@tanstack/vue-virtual": "^3.8.1",
    "@vueuse/components": "^10.11.0",
    "@vueuse/core": "^10.11.0",
    "@vueuse/router": "^10.11.0",
    "@vueuse/rxjs": "^10.11.0",
    "dayjs": "^1.11.11",
    "dexie": "^4.0.7",
    "electron-updater": "^6.1.7",
    "lucide-vue-next": "^0.400.0",
    "pinia": "^2.1.7",
    "rxjs": "^7.8.1",
    "scroll-into-view-if-needed": "^3.1.0",
    "spark-md5": "^3.0.2",
    "uuid": "^10.0.0",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rushstack/eslint-patch": "^1.10.3",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.14.8",
    "@types/spark-md5": "^3.0.4",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.12.10",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.5.2",
    "vee-validate": "^4.13.1",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "vue": "^3.4.30",
    "vue-tsc": "^2.0.22"
  }
}
